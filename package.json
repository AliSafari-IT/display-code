{
  "name": "@asafarim/display-code",
  "version": "1.0.2",
  "description": "A React component for displaying syntax-highlighted code blocks with copy functionality and theme support.",
  "main": "dist/index.js",
  "type": "module",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "demo",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "all": "pnpm i && pnpm run build",
    "prepare": "npm run build",
    "clean": "rm -rf dist",
    "demo": "pnpm build && cd demo && pnpm run build && pnpm dev",
    "demo:preview": "cd demo && pnpm run preview"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "rollup": "^3.29.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliSafari-IT/asafarim-webapp.git",
    "directory": "packages/display-code"
  },
  "keywords": [
    "asafarim",
    "react",
    "code",
    "display",
    "syntax",
    "highlight",
    "component",
    "typescript",
    "prism",
    "code-block"
  ],
  "author": "Ali Safari",
  "license": "MIT",
  "homepage": "https://github.com/AliSafari-IT/asafarim-webapp/tree/main/packages/display-code",
  "bugs": {
    "url": "https://github.com/AliSafari-IT/asafarim-webapp/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}